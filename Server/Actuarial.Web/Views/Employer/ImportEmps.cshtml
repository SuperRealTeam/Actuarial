@{
    ViewData["Title"] = "Import Employers From Excel";
}

<div class="row">
    <div class="col-5">

        <form method="post" enctype="multipart/form-data" asp-controller="Employer" asp-action="ImportEmps">
            <div class="form-group" style="width:400px!important;">
                <div class="col-md-10">
                    <h3>Upload File</h3>
                    <input class="form-control" name="fromFiles" multiple="multiple" type="file" />
                </div>
            </div>
            <br />
            <div class="form-group" style="width:400px!important;">
                <div class="col-md-10">

                    <input class="btn btn-primary" type="submit" value="Upload File" />

                </div>
            </div>
        </form>
    </div>
</div>